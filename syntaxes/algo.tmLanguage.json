{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "algo",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.algo",
					"match": "\\b(Algorithme|Fonction|Procédure|Type|Début|Fin|Lexique|Local|Si|Sinon|FinSi|Alors|Pour|de|à|Faire|FinPour|TantQue|FinTantQue|Répéter|Jusqu'à|Selon|Cas|FinSelon)\\b|(d')"
				},
				{
					"name": "keyword.operator.algo",
					"match": "\\b(et|ou|E|S|<-|=|<>|<|>|<=|>=|\\+|-|\\*|/|mod|non|div|\\^)\\b"
				},
				{
					"name": "keyword.other.algo",
					"match": "\\b(vrai|faux)\\b"
				},
				{
					"name": "keyword.operator.new",
					"match": "\\b(entier|réel|chaine|caractère|booléen|tableau)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.algo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.algo",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.algo",
			"match": "//.*$"
		},
		"numbers": {
			"name": "constant.numeric.algo",
			"match": "\\b[0-9]+\\b"
		},
		"entities": {
			"name": "entity.name.function.algo",
			"match": "\\b[A-Za-z][A-Za-z0-9_]*\\b(?=\\()"
		},
		"variables": {
			"name": "variable.name.algo",
			"match": "\\b[A-Za-z][A-Za-z0-9_]*\\b"
		}
	},
	"scopeName": "algo"
}